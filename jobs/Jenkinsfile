pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
               sh "echo generando el fragmento"
               withMaven(maven:'maven'){
                    sh "mvn clean install package"
                }
            }
        }
        stage('Deploy'){
            steps {
                script{
                    sh "echo moviendo el archivo dockerfile donde est√° el fragmento y hacer el artifact"
                    sh "mv jobs/Dockerfile target/Dockerfile"
                    docker.build("xhavckedx/combatdice:${env.BUILD_NUMBER}")
                    docker.build("xhavckedx/combatdice:latest")
                    docker.image("xhavckedx/combatdice:${env.BUILD_NUMBER}").push()
                    docker.image("xhavckedx/combatdice:latest").push()
                }
            }
        }
    }
    post {
        success {
            archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
        }
    }
}
